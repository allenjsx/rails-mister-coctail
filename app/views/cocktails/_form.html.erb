<%= simple_form_for(@cocktail) do |form| %>
<%= form.error_notification %>
<div class="form-inputs">
<%= form.input :name %>
<%= form.input :description %>
<%= form.input :photo, as: :attachinary %>
</div>

<div class="form-actions">
  <%= form.button :submit, class: "btn-default" %>
</div>
<% end %>
