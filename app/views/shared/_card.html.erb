<% @cocktails.each do |cocktail| %>
<div class="card" style="background-image: url('<%= asset_path('cocktail-bar.jpg') %>');">
  <div class="card-category">Popular</div>
  <div class="card-description">
    <h2><%="#{cocktail.name}"%></h2>
    <p><%= cocktail.description %></p>
  </div>
  <%= link_to "#{cocktail.name}", cocktail_path(cocktail.id), class: "card-link" %>
</div>
<% end %>
